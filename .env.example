# Copy to .env and adjust if needed
# IMPORTANT - Create strong, unique keys and passwords and update them here

LOG_LEVEL=INFO

# Airflow vars
AIRFLOW_WEBSERVER_SECRET_KEY=devsupersecretkeythatissameeverywhere
AIRFLOW_WWW_USER_USERNAME=admin
AIRFLOW_WWW_USER_PASSWORD=admin
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=airflow
AIRFLOW_DB_DB=airflow
AIRFLOW_DB_PORT=5432
AIRFLOW_DB_HOST=postgres-airflow
AIRFLOW_DB_DIALECT=postgresql+psycopg2

# Kafka vars
KAFKA_BOOTSTRAP=kafka:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_BROKERCONNECT=kafka:9092
KAFKA_POLL_TIMEOUT_SEC=1.0
KAFKA_SHUTDOWN_GRACE_SEC=10

# Warehouse DB vars
WAREHOUSE_DB_USER=analytics
WAREHOUSE_DB_PASSWORD=analytics
WAREHOUSE_DB_DB=opendata
WAREHOUSE_DB_PORT=5432
WAREHOUSE_DB_HOST=postgres-warehouse
WAREHOUSE_DB_DIALECT=postgresql

# User vars
HOME_LAT="<latitude for measurements>"
HOME_LON="<longitude for measurements>"
HOME_RADIUS_M=25000

# API vars
OPENAQ_BASE_URL=https://api.openaq.org/v3
OPENAQ_API_KEY="<your openaq.org api key>"
OPENAQ_USER_AGENT="(https://github.com/your/repo, you@example.com)"
KAFKA_TOPIC_OPENAQ=raw.openaq.latest_by_location
KAFKA_TOPIC_OPENAQ_DLT=raw.openaq.latest_by_location.dlq

WEATHERGOV_BASE_URL=https://api.weather.gov
WEATHERGOV_USER_AGENT="(https://github.com/your/repo, you@example.com)"
KAFKA_TOPIC_WEATHER=raw.weather.hourly_forecast
KAFKA_TOPIC_WEATHER_DLT=raw.weather.hourly_forecast.dlq

AIRNOW_BASE_URL=https://www.airnowapi.org
AIRNOW_API_KEY="<your airnow api key>"
AIRNOW_USER_AGENT="(https://github.com/your/repo, you@example.com)"
KAFKA_TOPIC_AIRNOW=raw.airnow.air_quality_forecast
KAFKA_TOPIC_AIRNOW_DLT=raw.airnow.air_quality_forecast.dlq

OPEN_METEO_WEATHER_URL=https://api.open-meteo.com/v1/forecast
OPEN_METEO_AIR_URL=https://air-quality-api.open-meteo.com/v1/air-quality
OPEN_METEO_TIMEOUT_SEC=15
OPEN_METEO_RETRIES=3
OPEN_METEO_RETRY_BACKOFF=0.2
OPEN_METEO_FORECAST_HOURS=48
KAFKA_TOPIC_OPEN_METEO=raw.open_meteo.weather_record
KAFKA_TOPIC_OPEN_METEO_DLT=raw.open_meteo.weather_record.dlq

# DAG vars
OPENAQ_LATEST_MEASURES_EVENT_TYPE=openaq.locations.latest

# Agent vars
AGENT_OLLAMA_BASE_URL=http://localhost:11434
AGENT_OLLAMA_MODEL=phi4-mini
AGENT_DATABASE_URL=postgresql+psycopg2://analytics:analytics@localhost:5432/warehouse
